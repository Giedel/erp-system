<Window x:Class="system_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:system_project.view"
        xmlns:VModel="clr-namespace:system_project.model"
        xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1100"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <VModel:Main_View_Model />
    </Window.DataContext>

    <Border 
                CornerRadius="10"
                BorderThickness="2">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource PrimaryBluePurple}" Offset="0.5" />
                <GradientStop Color="{StaticResource PrimaryYellow}" Offset="1" />
                <GradientStop Color="{StaticResource PrimaryWhite}" Offset="0" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Side Bar -->
                <ColumnDefinition Width="250"/>
                <!-- Content Section -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Side Bar -->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0"
                    Background="{StaticResource GradientSecondary}">

                <StackPanel Background="Transparent">

                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal"
                                Height="50"
                                Margin="10,25,0,40"
                                Background="Transparent">
                        <Image Source="/assets/avielle_logo.png" />

                        <TextBlock Text="AVIELLE"
                                   FontFamily="Georgia"
                                   FontSize="30"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource BgLight}"
                                   Margin="-5,0,0,0"/>

                    </StackPanel>
                    <!-- Navigation Buttons -->
                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="Home" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Dashboard" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="UserGroup" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Employees" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="ChartArea" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Sales" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="ChartSimple" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Performance" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="ChartPie" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Insights &amp; Analytics" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="MoneyCheckDollar" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Payroll" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="CalendarDay" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Leave Management" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="FileContract" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Forms &amp; Documents" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>


                </StackPanel>

            </Border>

            <!-- Main Section -->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1"
                    Background="{StaticResource BgLight}">

                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Control Bar -->
                        <RowDefinition Height="25"/>
                        <!-- Header/Caption -->
                        <RowDefinition Height="35"/>
                        <!-- Content / Child View -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Control Bar -->
                    <StackPanel x:Name="Control_Bar_Panel"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="Control_Bar_Panel_MouseLeftButtonDown"
                                MouseEnter="Control_Bar_Panel_MouseEnter">
                        
                    </StackPanel>
                    
                </Grid>

            </Border>
        </Grid>
    </Border>

</Window>
