<UserControl x:Class="erp_system.view.Payroll_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Cards -->
                <RowDefinition Height="*"/>
                <!-- Payroll Records -->
                <RowDefinition Height="Auto"/>
                <!-- Deduction Breakdown -->
            </Grid.RowDefinitions>

            <!-- ===== Top Section Cards ===== -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,20">
                <UniformGrid DockPanel.Dock="Bottom" Columns="3" HorizontalAlignment="Stretch">
                    <!-- Card 1 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Total Payroll" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="₱0" FontWeight="SemiBold" FontSize="24" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Total Commissions" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="₱0" FontWeight="SemiBold" FontSize="24" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Total Deductions" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="₱0" FontWeight="SemiBold" FontSize="24" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Process Payroll Button -->
                <Button Content="Process Payroll" Background="#FFDFAF00" 
                        Padding="15,10" Margin="20,0,0,0" 
                        HorizontalAlignment="Right" DockPanel.Dock="Top" 
                        FontWeight="Bold" BorderThickness="0" 
                        Cursor="Hand"/>
            </DockPanel>

            <!-- ===== Payroll Records ===== -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Payroll Records" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="Loading payroll records..." 
                               Foreground="Gray" FontSize="14" 
                               HorizontalAlignment="Center" Margin="0,40,0,20"/>
                </StackPanel>
            </Border>

            <!-- ===== Philippine Deduction Breakdown ===== -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Philippine Deduction Breakdown" 
                               FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <UniformGrid Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <!-- SSS -->
                        <Border Background="#FFF9F9F9" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="SSS" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="4.5%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                <TextBlock Text="Social Security System contribution (max ₱1,125)" 
                                           TextWrapping="Wrap" Foreground="Gray" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- PhilHealth -->
                        <Border Background="#FFF9F9F9" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="PhilHealth" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="2.75%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                <TextBlock Text="Health insurance contribution (max ₱1,750)" 
                                           TextWrapping="Wrap" Foreground="Gray" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Pag-IBIG -->
                        <Border Background="#FFF9F9F9" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="Pag-IBIG" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="2%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                <TextBlock Text="Housing fund contribution (max ₱100)" 
                                           TextWrapping="Wrap" Foreground="Gray" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Income Tax -->
                        <Border Background="#FFF9F9F9" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="Income Tax" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="15%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                <TextBlock Text="Withholding tax on excess over ₱25,000" 
                                           TextWrapping="Wrap" Foreground="Gray" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
