<UserControl x:Class="erp_system.view.Performance_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Cards + Button -->
                <RowDefinition Height="*"/>
                <!-- Performance + Goals -->
                <RowDefinition Height="Auto"/>
                <!-- Recent Evaluations -->
            </Grid.RowDefinitions>

            <!-- ===== TOP CARDS + NEW EVALUATION ===== -->
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <!-- Cards -->
                <UniformGrid DockPanel.Dock="Bottom" Columns="3" HorizontalAlignment="Stretch">
                    <!-- Card 1 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Total Evaluations" Foreground="#444"/>
                            <TextBlock Text="0" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text="🏆" FontSize="20" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Average Rating" Foreground="#444"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="0.0" FontWeight="Bold" FontSize="18" Margin="0,0,10,0"/>
                                <TextBlock Text="⭐ ☆ ☆ ☆ ☆" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Card 3 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Avg Sales Achievement" Foreground="#444"/>
                            <TextBlock Text="0.0%" Foreground="Red" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Text="📈" FontSize="20" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Right: New Evaluation Button -->
                <Button DockPanel.Dock="Top" Content=" + New Evaluation " Width="160" Height="40"
                        Background="#FACC15" Foreground="Black" FontWeight="Bold" BorderThickness="0"
                        Cursor="Hand" HorizontalAlignment="Right" Margin="10 10"/>
            </DockPanel>

            <!-- ===== MIDDLE SECTION ===== -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Team Performance Overview -->
                <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="20" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Team Performance Overview" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <TextBlock Text="No performance evaluations found" Foreground="#666" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Padding="40"/>
                    </StackPanel>
                </Border>

                <!-- Monthly Goals Tracker -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="20" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Monthly Goals Tracker" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                        <!-- Goal 1 -->
                        <StackPanel Margin="0,10">
                            <DockPanel>
                                <TextBlock Text="Team Sales Revenue" FontWeight="SemiBold"/>
                                <TextBlock Text="₱150K / ₱180K" Foreground="#EAB308" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <ProgressBar Value="83" Maximum="100" Height="10" Margin="0,5,0,2"/>
                            <TextBlock Text="83% of monthly target achieved" Foreground="#666" FontSize="12"/>
                        </StackPanel>

                        <!-- Goal 2 -->
                        <StackPanel Margin="0,10">
                            <DockPanel>
                                <TextBlock Text="New Customer Acquisitions" FontWeight="SemiBold"/>
                                <TextBlock Text="28 / 35" Foreground="#EAB308" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <ProgressBar Value="80" Maximum="100" Height="10" Margin="0,5,0,2"/>
                            <TextBlock Text="80% of customer target reached" Foreground="#666" FontSize="12"/>
                        </StackPanel>

                        <!-- Goal 3 -->
                        <StackPanel Margin="0,10">
                            <DockPanel>
                                <TextBlock Text="Average Team Rating" FontWeight="SemiBold"/>
                                <TextBlock Text="4.2 ⭐⭐⭐⭐☆" Foreground="#EAB308" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <ProgressBar Value="85" Maximum="100" Height="10" Margin="0,5,0,2"/>
                            <TextBlock Text="Excellent team performance this month" Foreground="#666" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ===== RECENT EVALUATIONS ===== -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="20">
                <StackPanel>
                    <TextBlock Text="Recent Performance Evaluations" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <TextBlock Text="No evaluations found" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="#666" FontSize="14" Padding="40"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
