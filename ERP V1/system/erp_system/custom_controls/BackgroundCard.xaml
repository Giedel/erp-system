<UserControl x:Class="erp_system.custom_controls.BackgroundCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.custom_controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource BackgroundCardStyle}">
        <Grid Margin="5 15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".75*"/>
                <ColumnDefinition Width=".25*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding Title}" Style="{StaticResource CardTitleStyle}"/>
                </Grid>

                <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Text="{Binding Value}" Style="{StaticResource CardValueStyle}"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Icon}" Style="{StaticResource CardIconStyle}"/>
                </Grid>
            </Grid>

            <StackPanel>
                <TextBlock Text="{Binding Description}" Style="{StaticResource CardDescriptionStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
