<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
>

    <!-- 🟢 Card Backgrounds -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CreamWhite}"/>
    <SolidColorBrush x:Key="CardHoverBrush" Color="{StaticResource PrimaryWhite}" Opacity=".2"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource PrimaryBluePurple}"/>

    <!-- 🔤 Foreground Colors -->
    <SolidColorBrush x:Key="CardTitleForeground" Color="#333333"/>
    <SolidColorBrush x:Key="CardValueForeground" Color="#222222"/>
    <SolidColorBrush x:Key="CardDescriptionForeground" Color="#777777"/>
    <SolidColorBrush x:Key="CardIconForeground" Color="#444444"/>
    
    <!-- 🔤 BorderShadow Colors -->
    <DropShadowEffect x:Key="BorderShadowEffect" Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.1"/>


    <!-- 📐 Sizes -->
    <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
    <Thickness x:Key="CardPadding">15</Thickness>
    <Thickness x:Key="CardMargin">10</Thickness>

    <!-- 📏 Font Sizes -->
    <sys:Double x:Key="CardIconSize">28</sys:Double>
    <sys:Double x:Key="CardValueSize">22</sys:Double>
    <sys:Double x:Key="CardTitleSize">14</sys:Double>
    <sys:Double x:Key="CardDescriptionSize">12</sys:Double>

    <!-- 🎨 Default Style for Card -->
    <Style x:Key="StatCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style x:Key="BackgroundCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="Background" Value="{StaticResource BgLight}"/>
        <Setter Property="Effect" Value="{StaticResource BorderShadowEffect}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- 🎨 TextBlock Styles -->
    <Style x:Key="CardIconStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="{StaticResource CardIconSize}"/>
        <Setter Property="Foreground" Value="{StaticResource CardIconForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CardValueStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="{StaticResource CardValueSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource CardValueForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CardTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="{StaticResource CardTitleSize}"/>
        <Setter Property="Foreground" Value="{StaticResource CardTitleForeground}"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CardDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="{StaticResource CardDescriptionSize}"/>
        <Setter Property="Foreground" Value="{StaticResource CardDescriptionForeground}"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>